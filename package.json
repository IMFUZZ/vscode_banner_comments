{
	"name": "banner-comments",
	"displayName": "Banner comments",
	"description": "Converts selected lines into banner comments using figlet.",
	"version": "0.1.0",
	"publisher": "heyimfuzz",
	"repository": {
		"type": "git",
		"url": "https://github.com/IMFUZZ/vscode_banner_comments.git"
	},
	"engines": {
		"vscode": "^1.17.0"
	},
	"categories": [
		"Formatters",
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.bannerCommentApply",
		"onCommand:extension.bannerCommentSetFont",
		"onCommand:extension.bannerCommentPickFromFavorites",
		"onCommand:extension.bannerCommentAddAFontToFavorites",
		"onCommand:extension.bannerCommentAddCurrentFontToFavorites",
		"onCommand:extension.bannerCommentRemoveFromFavorites"
	],
	"main": "./out/extension",
	"icon": "images/banner-comment-icon.png",
	"galleryBanner": {
		"color": "#333333",
		"theme": "dark"
	},
	"contributes": {
		"commands": [
			{
				"command": "extension.bannerCommentApply",
				"title": "Banner comments: Apply."
			},
			{
				"command": "extension.bannerCommentSetFont",
				"title": "Banner comments: Select a font."
			},
			{
				"command": "extension.bannerCommentPickFromFavorites",
				"title": "Banner comments: Select from favorites."
			},
			{
				"command": "extension.bannerCommentAddAFontToFavorites",
				"title": "Banner comments: Add a font to favorites."
			},
			{
				"command": "extension.bannerCommentAddCurrentFontToFavorites",
				"title": "Banner comments: Add current font to favorites."
			},
			{
				"command": "extension.bannerCommentRemoveFromFavorites",
				"title": "Banner comments: Remove a font from favorites."
			}
		],
		"configuration": {
			"type": "object",
			"title": "Banner comments",
			"properties": {
				"banner-comments.font": {
					"type": "string",
					"default": "Banner4",
					"description": "Default banner font to use.",
					"scope": "resource"
				},
				"banner-comments.favorites": {
					"type": "string[]",
					"default": [],
					"description": "List of favorites figlet fonts.",
					"scope": "resource"
				},
				"banner-comments.trimTrailingWhitespaces": {
					"type": "boolean",
					"default": true,
					"description": "Automatically trims the trailing whitespaces of the generated banner.",
					"scope": "resource"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^2.5.3",
		"vscode": "^1.1.5",
		"@types/node": "^7.0.43",
		"@types/mocha": "^2.2.42"
	},
	"dependencies": {
		"async": "^2.5.0",
		"comment-json": "^1.1.3",
		"figlet": "^1.2.0"
	}
}
